<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <%= form_for(task) do |f| %>
      <%= f.check_box :completed %>
    <% end %>
    <li><%= link_to task.title, task_path(task)%>
    <%= link_to "Bin",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
